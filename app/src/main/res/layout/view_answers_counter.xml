<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:parentTag="android.widget.RelativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:background="#666">

    <ProgressBar
        android:id="@+id/progressView"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:indeterminate="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/iconView"
        app:layout_constraintEnd_toEndOf="@id/iconView"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/iconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_star_white_shadow_32dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/iconView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.BigBody"
        android:textStyle="bold"
        android:textColor="#fff"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginLeft="-8dp"
        tools:scaleX="1.6"
        tools:scaleY="1.6"
        android:shadowColor="#000"
        android:shadowRadius="8"
        android:shadowDy="2"
        tools:text="1583"
        tools:ignore="RtlHardcoded"/>

</androidx.constraintlayout.widget.ConstraintLayout>
