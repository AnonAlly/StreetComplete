<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fireHydrantSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fire_hydrant_sign_fi" />

    <EditText
        android:id="@+id/diameterInput"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:background="#25000000"
        android:fontFamily="monospace"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="3"
        android:text="999"
        android:textColor="@color/traffic_black"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/fireHydrantSign"
        app:layout_constraintEnd_toEndOf="@+id/fireHydrantSign"
        app:layout_constraintStart_toStartOf="@+id/fireHydrantSign"
        app:layout_constraintTop_toTopOf="@+id/fireHydrantSign" />

</androidx.constraintlayout.widget.ConstraintLayout>
